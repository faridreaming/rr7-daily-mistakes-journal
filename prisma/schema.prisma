generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model JournalEntry {
  id String @id @default(cuid())

  date            DateTime
  mistakes        String
  triggers        String
  impacts         String
  futureImpacts   String
  preventionSteps String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}
